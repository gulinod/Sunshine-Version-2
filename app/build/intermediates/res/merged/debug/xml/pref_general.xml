<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="13502"
        android:inputType="text"
        android:key="@string/location_key"
        android:singleLine="true"
        android:title="@string/location_title" />

    <ListPreference
        android:title="@string/pref_title"
        android:defaultValue="@string/temp_default"
        android:key="@string/pref_units_key"
        android:summary="Choose between Celsius(default) and Fahrenheit "
        android:entries="@array/pref_units_values"
        android:entryValues="@array/pref_units_options" />



</PreferenceScreen>

